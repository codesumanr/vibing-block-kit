{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "prefix": "bk",
      "buildPath": "tokens/dist/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": false
          }
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "tokens/dist/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/module",
          "options": {
            "outputReferences": true
          }
        }
      ]
    }
  }
} 