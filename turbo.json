{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "storybook-static/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "storybook": {
      "dependsOn": ["build"],
      "outputs": [".storybook-static/**"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"]
    },
    "release": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    },
    "chromatic": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "tokens:build": {
      "outputs": ["tokens/dist/**"]
    }
  }
} 